<Comp>:
    orientation: 'vertical'
    padding: 20
    Label:
        text: 'Insira o preço e o peso em gramas dos produtos'
        font_size: 20
        text_size: self.size
    BoxLayout:
        Label:
            text: 'Produto 1:'
        Label:
            text: 'Kg ou L:'
    BoxLayout:
        spacing: 10
        TextInput:
            id: pr1
            multiline: False
            input_filter: 'float'
        TextInput:
            id: ps1
            multiline: False
            input_filter: 'float'
        Label:
            id: p1
            font_size: 20

    BoxLayout:
        Label:
            text: 'Produto 2:'
        Label:
            text: 'Kg ou L:'
    BoxLayout:
        spacing: 10
        TextInput:
            id: pr2
            multiline: False
            input_filter: 'float'
        TextInput:
            id: ps2
            multiline: False
            input_filter: 'float'
        Label:
            id: p2
            font_size: 20
    BoxLayout:
        spacing: 10
        Label:
            text: 'Diferença:'
            font_size: 20
        Label:
            id: dif
            font_size: 20
    Button:
        text: 'COMPARAR'
        on_release: root.calc()